{
	"files.exclude": {
		"node_modules": true,
		"prisma/generated": true,
		"bun.lock": true,
		"logs": true,
		"**/_load.ts": true
	},

	"editor.formatOnSave": true,
	"xo.enable": true,
	"xo.format.enable": true,
	"[typescript]": {
		"editor.defaultFormatter": "samverschueren.linter-xo"
	},
	"[prisma]": {
		"editor.defaultFormatter": "samverschueren.linter-xo"
	}
}
